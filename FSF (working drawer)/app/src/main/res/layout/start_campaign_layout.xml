<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/relStartLayout"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_login">

        <ImageView
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:textColor="#ffffff"
            android:fontFamily="impact"
            android:textStyle="bold"
            android:text="-START A NEW CAMPAIGN-"
            android:textSize="24dp"
            android:id="@+id/browseCampaignsTxt"
            android:gravity="center"/>
        <!--
        <TextView
            android:layout_below="@+id/browseCampaignsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:fontFamily="impact"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Find campaigns in your local community, or start one yourself!"
            android:gravity="center_horizontal"/>
         -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_below="@+id/relStartLayout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Thank you for your enthusiasm!"
            android:id="@+id/thanksTxt"
            android:fontFamily="corbel"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_below="@+id/thanksTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0px"
            android:layout_marginLeft="15dp"
            android:textColor="#6D6D6D"
            android:fontFamily="corbel"
            android:textSize="12dp"
            android:text="@string/however_txt"
            android:id="@+id/howeverTxt"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <Button
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/browseButton"
        android:background="@drawable/button_box2"
        android:text="Login or Create a Free Account"
        android:textSize="16dp"
        android:fontFamily="impact"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relLayout1"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        />
</RelativeLayout>