<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/browseImageViewLayout"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_login">

        <ImageView
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo"
            />
        <RelativeLayout
            android:id="@+id/relBbrowseCampaignsTxt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:textColor="#ffffff"
                android:fontFamily="impact"
                android:textStyle="bold"
                android:text="BROWSE CAMPAIGNS"
                android:textSize="22dp"
                android:id="@+id/browseCampaignsTxt"
                android:gravity="center"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:src="@drawable/thin_line"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="83dp"
                android:layout_toRightOf="@id/browseCampaignsTxt"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:src="@drawable/thin_line"
                android:layout_marginRight="6dp"
                android:layout_marginTop="83dp"
                android:layout_toLeftOf="@id/browseCampaignsTxt"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

        <TextView
            android:layout_below="@+id/relBbrowseCampaignsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:fontFamily="impact"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Find campaigns in your local community, or start one yourself!"
            android:gravity="center_horizontal"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relCmptxt"
            android:layout_below="@+id/browseImageViewLayout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CAMPAIGNS"
                android:id="@+id/campaign"
                android:fontFamily="impact"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:layout_centerHorizontal="true"
            />
        </RelativeLayout>

            <TextView
                android:layout_below="@+id/relCmptxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:layout_marginLeft="15dp"
                android:textColor="#6D6D6D"
                android:fontFamily="corbel"
                android:textSize="12dp"
                android:text="Checkout some of the latest campaigns hosted on "
                android:id="@+id/checkout"
                android:adjustViewBounds="true"
                />

            <TextView
                android:layout_below="@+id/relCmptxt"
                android:layout_toRightOf="@id/checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6D6D6D"
                android:fontFamily="corbel"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Fund Some Fun!"
                android:id="@+id/fsftxt"
                android:adjustViewBounds="true"
                />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/checkout"
        android:background="#6D6D6D"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp">


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView2"
            />

    </RelativeLayout>
</RelativeLayout>
